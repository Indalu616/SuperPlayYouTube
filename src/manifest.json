{
  "manifest_version": 3,
  "name": "SuperPlay AI",
  "version": "1.1.0",
  "description": "AI-powered YouTube enhancer with smart summaries, explanations, and follow-up questions",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://*.googlevideo.com/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"],
      "js": ["src/content/content.js"],
      "css": ["src/styles/content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "SuperPlay AI Settings",
    "default_icon": {
      "16": "public/icons/icon128.png",
      "48": "public/icons/icon128.png",
      "128": "public/icons/icon128.png"
    }
  },
  "icons": {
    "16": "public/icons/icon128.png",
    "48": "public/icons/icon128.png",
    "128": "public/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/components/*",
        "src/styles/*",
        "assets/*"
      ],
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"]
    }
  ]
}
